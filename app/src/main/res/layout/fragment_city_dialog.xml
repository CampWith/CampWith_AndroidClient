<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white_gray">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지역을 선택해 주세요"
            style="@style/medium_basic"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_region1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="경기도"
            style="@style/medium_basic_18sp"
            android:background="@color/white"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_region2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="강원도"
            style="@style/medium_basic_18sp"
            android:background="@color/white"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_region3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="충청북도"
            style="@style/medium_basic_18sp"
            android:background="@color/white"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_region4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="충청남도"
            style="@style/medium_basic_18sp"
            android:background="@color/white"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_region5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="경상북도"
            style="@style/medium_basic_18sp"
            android:background="@color/white"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_region6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="경상남도"
            style="@style/medium_basic_18sp"
            android:background="@color/white"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_region7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전라북도"
            style="@style/medium_basic_18sp"
            android:background="@color/white"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_region8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전라남도"
            style="@style/medium_basic_18sp"
            android:background="@color/white"
            android:layout_margin="10dp"/>
    </LinearLayout>
</layout>