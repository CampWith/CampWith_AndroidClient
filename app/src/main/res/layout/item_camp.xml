<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ItemCamp"
            type="com.example.campwith.data.Item" />
    </data>
<androidx.cardview.widget.CardView
    android:id="@+id/cv_camp_item"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_baseline_image_24"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/medium_basic_14sp"
                android:textColor="@color/dark_gray"
                android:text="캠핑유형" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@{ItemCamp.facltNm}"
                style="@style/medium_basic_18sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ItemCamp.addr1}"
                style="@style/medium_basic_16sp"
                android:textColor="@color/dark_gray" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
</layout>